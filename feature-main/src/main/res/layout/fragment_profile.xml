<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.profil.ProfileFragment">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/g_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="im_image_profile,toolbar_button,menu_toolbar" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/cpi_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"
        app:indicatorColor="@color/blue"
        app:layout_constraintTop_toTopOf="@id/im_image_profile"
        app:layout_constraintBottom_toBottomOf="@id/im_image_profile"
        app:layout_constraintStart_toStartOf="@id/im_image_profile"
        app:layout_constraintEnd_toEndOf="@id/im_image_profile"
        />


    <ImageView
        android:id="@+id/im_image_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/gl_image_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/toolbar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:backgroundTint="@null"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/toolbar_menu" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_tv_start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/gl_tv_which_user"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/gl_image_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_tv_which_user"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_image_profile"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/openBottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#5393D0"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im_image_profile"
        app:layout_constraintBottom_toTopOf="@id/gl_image_profile"
        app:srcCompat="@drawable/ic_camera" />


    <View
        android:id="@+id/view"
        android:layout_width="1999dp"
        android:layout_height="89dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@id/view_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im_image_profile" />

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/account"
        android:textAppearance="@style/text_account"
        android:textColor="#5393D0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/gl_tv_start"
        app:layout_constraintTop_toBottomOf="@id/im_image_profile" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#2C2C2C"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/gl_tv_start"
        app:layout_constraintTop_toBottomOf="@id/tv_account"
        tools:text="+996 704190504" />

    <TextView
        android:id="@+id/tv_chance_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/chance_number"
        android:textAppearance="@style/text_chance"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/gl_tv_start"
        app:layout_constraintTop_toBottomOf="@id/tv_number" />

    <View
        android:id="@+id/vw_setting"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="#9F9F9F"
        app:layout_constraintTop_toBottomOf="@id/tv_chance_number" />


    <View
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="258dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/settings"
        android:textAppearance="@style/text_account"
        android:textColor="#5393D0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/gl_tv_start"
        app:layout_constraintTop_toBottomOf="@id/vw_setting" />

    <ImageView
        android:id="@+id/vk_notifications"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_bell"
        app:layout_constraintStart_toStartOf="@id/gl_tv_start"
        app:layout_constraintTop_toBottomOf="@id/tv_settings" />

    <View
        android:id="@+id/v_notifications"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:background="#66D9D9D9"
        app:layout_constraintTop_toBottomOf="@id/tv_settings" />

    <View
        android:id="@+id/vk_crossed"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_crossed_eye"
        app:layout_constraintStart_toStartOf="@id/gl_tv_start"
        app:layout_constraintTop_toBottomOf="@id/v_notifications" />

    <View
        android:id="@+id/vk_globe"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_language"
        app:layout_constraintStart_toStartOf="@id/gl_tv_start"
        app:layout_constraintTop_toBottomOf="@id/v_hide_phone_number" />

    <TextView
        android:id="@+id/tv_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:text="@string/tv_notifications"
        android:textAppearance="@style/tv_settings"
        android:textColor="#2C2C2C"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/vk_notifications"
        app:layout_constraintTop_toBottomOf="@id/tv_settings" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_hide_phone_number"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginEnd="10dp"
        android:background="@null"
        android:thumb="@drawable/hide_phone_number_switch_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_notifications"
        app:track="@drawable/ic_switch_track_unchecked" />

    <View
        android:id="@+id/v_hide_phone_number"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:background="#66D9D9D9"
        app:layout_constraintTop_toBottomOf="@id/v_notifications" />

    <TextView
        android:id="@+id/tv_crossed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:text="@string/tv_crossed"
        android:textAppearance="@style/tv_settings"
        android:textColor="#2C2C2C"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/vk_crossed"
        app:layout_constraintTop_toBottomOf="@id/v_notifications" />

    <TextView
        android:id="@+id/tv_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:text="@string/tv_language"
        android:textAppearance="@style/tv_settings"
        android:textColor="#2C2C2C"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/vk_globe"
        app:layout_constraintTop_toBottomOf="@id/v_hide_phone_number" />

    <View
        android:id="@+id/v_language"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:background="#66D9D9D9"
        app:layout_constraintTop_toBottomOf="@id/v_hide_phone_number" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <include
            android:id="@+id/gallery_bottom_sheet"
            layout="@layout/fragment_gallery_bottom_sheet" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

