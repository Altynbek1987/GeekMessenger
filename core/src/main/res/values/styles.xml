<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialCardView.FirstRounded
        </item>

        <item name="background">@color/sentMessagesColor</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.LastRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.FirstRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
    </style>

    <style name="EditTextBorders" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@drawable/box_stroke_color_selector</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="hintTextColor">#323232</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">#727375</item>
    </style>

</resources>