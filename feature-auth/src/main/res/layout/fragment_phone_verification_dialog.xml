<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.auth.signUp.PhoneVerificationDialogFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardElevation="20dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="254dp"
            android:layout_height="165dp">

            <TextView
                android:id="@+id/tv_is_number_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номер указан верно?"
                android:textAlignment="center"
                android:textColor="#323232"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/gl_is_number_correct_end"
                app:layout_constraintStart_toEndOf="@+id/gl_is_number_correct_start"
                app:layout_constraintTop_toBottomOf="@+id/gl_is_number_correct_top" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_is_number_correct_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="19dp" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_is_number_correct_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.08" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_is_number_correct_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.92" />


            <TextView
                android:id="@+id/tv_entered_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+996552109876"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/gl_is_number_correct_end"
                app:layout_constraintStart_toEndOf="@+id/gl_is_number_correct_start"
                app:layout_constraintTop_toBottomOf="@+id/gl_entered_phone_number_top" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_entered_phone_number_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.34" />


            <TextView
                android:id="@+id/tv_edit_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="14dp"
                android:text="Изменить"
                android:textColor="#5393D0"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/gl_is_number_correct_start"
                app:layout_constraintTop_toTopOf="@id/gl_edit_phone_number_top" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_edit_phone_number_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.66" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_continue_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.92" />

            <TextView
                android:id="@+id/tv_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="14dp"
                android:text="Да"
                android:textColor="#5393D0"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/gl_is_number_correct_end"
                app:layout_constraintTop_toTopOf="@id/gl_edit_phone_number_top" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>